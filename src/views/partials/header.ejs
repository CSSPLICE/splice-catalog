<header class="p-3 bg-dark text-white mb-4">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 text-white">Home</a></li>
                <li><a href="https://cssplice.github.io" class="nav-link px-2 text-white">CSSPLICE</a></li>
            </ul>
            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" method="post" action="/search/">
                <input type="search" class="form-control form-control-dark" placeholder="Search" aria-label="Search" name="query" id="query">
            </form>
            <div class="text-end">
                <% if(locals.user) { %>
                    <a href="/profile" class="btn btn-outline-light me-2"> <%= locals.user.nickname %></a>
                    <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-light me-2">Login</a>
                <% } %>
            </div>
        </div>
    </div>
</header>