<!DOCTYPE html>
<html>
<%- include('../partials/head') -%>
<%- include('../partials/header') -%>
<meta http-equiv='content-type' content='text/html; charset=UTF-8'/>
<style>
  pre.message {
      background: white;
      border: thin dotted gray;
      margin: 1em auto;
      padding: 1em;
      max-width: 960px;
  }

  .container {
      max-width: 960px;
      margin: auto;
      padding: 1rem;
  }

  .iframe-preview {
      max-height: 80vh; /* limits height to 80% of the viewport */
      overflow: auto;
      margin-top: 1rem;
      border: 1px solid #ccc;
      padding: 0.5rem;
      background-color: #f9f9f9;
  }

  #previewIframe {
      width: 100%;
      min-height: 400px; /* ensures it's visible but not oversized */
      border: none;
  }
  </style>
<script type='text/javascript' charset='utf-8' src='splice-parent.js'></script>
<script>//<![CDATA[
window.addEventListener('DOMContentLoaded', () => {
  function sendingIframe(event) {
    for (const f of document.getElementsByTagName('iframe'))
      if (f.contentWindow === event.source) return f
    return undefined
  }

  // Connect the existing iframe with message handling
  const existingIframe = document.getElementById('previewIframe');

  window.addEventListener("message", event => {
    const iframe = sendingIframe(event)
    if (!iframe) return;

    // Find the associated message pre element
    const pre = document.getElementById('previewMessages');
    if (pre) {
      pre.textContent += JSON.stringify(event.data) + '\n';
    }

    if (event.data.subject === 'SPLICE.getState') {
      // TODO Demo state sending?
      const state = null // getStateOfProblem(iframe)
      iframe.contentWindow.postMessage({
        subject: 'SPLICE.getState.response',
        message_id: event.data.message_id,
        state
      }, '*');
    }
  }, false);
})
//]]></script>
<body>
    <div class="container">
        <h1 class="header"><%= item.exercise_name %></h1>
        <table class="table table-striped">
            <!-- <thead>
                <tr>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>
                </tr>
            </thead> -->
            <tbody class="table-group-divider">
                <tr>
                    <td>Title</td>
                    <td><%= item.title %></td>
                </tr>
                <tr>
                    <td>Catalog Type</td>
                    <td><%= item.catalog_type %></td>
                </tr>
                <tr>
                    <td>Persistent ID</td>
                    <td><%= item.persistentID %></td>
                </tr>
                <tr>
                    <td>Platform Name</td>
                    <td><%= item.platform_name %></td>
                </tr>
                <tr>
                  <td>Features</td>
                  <td>
                    <%
                      let featuresList = [];
                      if (Array.isArray(item.features)) {
                        featuresList = item.features;
                      } else if (typeof item.features === 'string') {
                        featuresList = item.features.split(/\s*,\s*/).filter(Boolean);
                      }
                      if (featuresList.length > 0) {
                        featuresList.forEach((feature, index) => { %>
                          <a href="/search?features=<%= encodeURIComponent(feature) %>" style="text-decoration: underline; color: #0000EE;"><%= feature %></a><% if (index < featuresList.length - 1) { %>, <% } %>
                        <% });
                      } else { %>
                        —
                      <% } %>
                  </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><%= item.description %></td>
                </tr>
                <tr>
                    <td>Keywords</td>
                    <td>
                      <% if (item.keywords && item.keywords.length > 0) { %>
                        <% item.keywords.forEach((keyword, index) => { %>
                          <a href="/search?query=<%= encodeURIComponent(keyword) %>" style="text-decoration: underline; color: #0000EE;"><%= keyword %></a><% if (index < item.keywords.length - 1) { %>, <% } %>
                        <% }); %>
                      <% } else { %>
                        —
                      <% } %>
                    </td>
                  </tr>
                <tr>
                    <td>Author</td>
                    <td>
                      <% if (Array.isArray(item.author)) { %>
                        <%= item.author.join(', ') %>
                      <% } else { %>
                        <%= item.author %>
                      <% } %>
                    </td>
                </tr>
                <tr>
                    <td>Institution</td>
                    <td><%= item.institution %></td>
                </tr>
                <tr>
                    <td>Iframe URL</td>
                    <td><a href="<%= item.iframe_url %>" target=_blank><%= item.iframe_url %></a></td>
                </tr>
                <tr>
                  <td>Protocol</td>
                  <td>
                    <% if (item.protocol && item.protocol.length) { %>
                      <%= item.protocol.join(', ') %>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                </tr>
                <!--add more field-->
                <tr>
                  <td>Protocol URL</td>
                  <td>
                    <% if (item.protocol_url && item.protocol_url.length) { %>
                      <% item.protocol_url.forEach(u => { %>
                        <div><a href="<%= u %>" target="_blank"><%= u %></a></div>
                      <% }) %>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <td>License</td>
                  <td>
                    <% if (item.license) { %>
                      <a href="<%= item.license %>" target="_blank"><%= item.license %></a>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <td>Programming Language</td>
                  <td>
                    <%= (item.programming_language || []).join(', ') %>
                  </td>
                </tr>
                <tr>
                  <td>Natural Language</td>
                  <td>
                    <%= (item.natural_language || []).join(', ') %>
                  </td>
                </tr>
            </tbody>
        </table>
          <!-- Iframe with border -->
          <div class="iframe-preview" style="border: 2px solid #ccc; padding: 10px; margin-top: 20px; border-radius: 5px;">
            <h4>Preview</h4>
            <iframe id="previewIframe" src="<%= item.iframe_url %>" width="100%" style="min-height: 670px;" allowfullscreen></iframe>
        </div>
        <%# Only show SPLICE protocol if the item supports it %>
        <% if (item.protocol && item.protocol.includes("SPLICE")) { %>
          <h4>SPLICE Output</h4>
          <%#pre id="previewMessages" class="message"></%pre> %>
        <% } %>
        <pre id="previewMessages" class="message"></pre>
    </div>

    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
