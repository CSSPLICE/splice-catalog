<!-- TABLE FILE LOADED -->
<table class="table table-striped">
    <%
        const truncateWords = (s, n = 20) => {
            if (!s) return "";
            const words = String(s).trim().split(/\s+/);
            return words.length <= n ? s : words.slice(0, n).join(' ') + '...';
        };
    %>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Exercise Title</th>
            <th scope="col">Features</th>
            <th scope="col">Description</th>
            <th scope="col">Platform</th>
            <th scope="col">Keywords</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        <% if (!items || items.length === 0) { %>
            <tr> </tr>
        <% } else { %>
            <% items.forEach((SLCItem, index) => { %>
                <%
                    const featuresArr = Array.isArray(SLCItem.features)
                        ? SLCItem.features
                        : (typeof SLCItem.features === 'string'
                            ? SLCItem.features.split(/\s*,\s*/).filter(Boolean)
                            : []);
                    const keywordsArr = Array.isArray(SLCItem.keywords) ? SLCItem.keywords : [];
                %>
            <tr>
                <td><%= index + 1 %></td> 
                <td scope="row">
                    <% if (isSearchPage) { %>
                <a href="/catalog/item/<%= encodeURIComponent(SLCItem.id) %>" style="text-decoration: underline; color: #0000EE;">
                         <%= SLCItem.title %>
                 </a>
                <% } else { %>
                 <a href="/catalog/item/<%= encodeURIComponent(SLCItem.id) %>" style="text-decoration: underline; color: #0000EE;">
                 <%= SLCItem.title %>
                </a>
                <% } %>
                </td>
                <td>
                    <%
                    let featureList = [];
                    if (Array.isArray(SLCItem.features)) {
                        featureList = SLCItem.features;
                    }
                    else if (typeof SLCItem.features === 'string') {
                        featureList = SLCItem.features.split(/\s*, \s*/).filter(Boolean);
                    }
                    %>
                    <%- featureList.map(feature => `<a href="#" class="feature-link" data-feature="${feature.trim()}">${feature.trim()}</a>`).join(', ') %>
                </td>
                <td>
                    <span class="short-description" data-description="<%= SLCItem.description || '' %>" style="cursor: pointer;">
                        <%- truncateWords(SLCItem.description, 20) %>
                    </span>
                </td>
                <td><a href="<%= SLCItem.iframe_url %>" target="_blank"><%= SLCItem.platform_name %></a></td>
                <td>
                    <% SLCItem.keywords.forEach((keyword, index) => { %>
                        <a href="#" class="keyword-link" data-keyword="<%= keyword %>" style="text-decoration: underline; color: #0000EE"><%= keyword %></a><% if (index < SLCItem.keywords.length - 1) { %>, <% } %>
                    <% }); %>
                </td>
            </tr>
        <% }) %>
    <% } %>
    </tbody>
</table>
<!-- Modal -->
<div id="descriptionModal" class="modal" style="display: none; position: fixed; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
    <div class="modal-content" style="background-color: white; margin: 10% auto; padding: 20px; border-radius: 5px; width: 50%; position: relative;">
        <span class="close" onclick="closeModal()" style="cursor: pointer; position: absolute; top: 10px; right: 15px; font-size: 24px;">&times;</span>
        <p id="fullDescription" style="margin-top: 30px;">This is a detailed description.</p>
    </div>
</div>
