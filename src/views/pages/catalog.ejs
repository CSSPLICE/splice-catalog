<!DOCTYPE html>
<html>
<%- include('../partials/head') -%>
<link rel="stylesheet" href="/css/style.css">
<%- include('../partials/header') -%>
<body>
    <div class="container">       
        <!-- SPLICE SLC Items Catalog -->
        <h3 class="header">SLC Item Catalog</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Exercise Title</th>
                    <th scope="col">Exercise Type</th>
                 <!--   <th scope="col">iframe_URL</th> -->
                 <th scope="col">Description</th>
                    <th scope="col">Platform</th>
                    <th scope="col">Keywords</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% catalog.forEach((SLCItem) => { %> 
                    <tr>
                       <td scope="row">
                        <form action="/item/" method="post" style="margin:0; padding:0;">
                            <input type="hidden" value="<%= SLCItem.exercise_name %>" name="item_link">
                            <a href="#" onclick="this.closest('form').submit(); return false;"><%= SLCItem.exercise_name %></a>
                        </form>
                
                        </td>
                     
                        <td><%= SLCItem.exercise_type %></td>
                       <!-- <td><a href="<%= SLCItem.iframe_url %>" target=_blank>See in iframe</a></td> -->

                       <td>
                        <span class="short-description" onclick="openModal()" style="cursor: pointer; color: black; text-decoration: none; display: inline-block; padding: 5px; background-color: none; border-radius: 5px; transition: background-color 0.3s ease;">
                            Short Description...
                        </span>
                        
                    </td>
                    
                        
                        <td><a href="<%= SLCItem.url %>"><%= SLCItem.platform_name %></a></td>

                        <td>
                            <% SLCItem.keywords.forEach((keyword, index) => { %>
                                <form style="display: none" action="/search/" method="post">
                                    <input type="submit" value="<%= keyword %>" name="query" id="query<%= keyword %>"></input>
                                </form>
                                <label style="text-decoration: underline; color: #0303b4" for="query<%= keyword %>"><%= keyword %></label>
                                <% if (index < SLCItem.keywords.length - 1) { %>, <% } %> <!-- Add a comma between keywords -->
                            <% }); %>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>

  <!-- Modal -->
<div id="descriptionModal" class="modal" style="display: none; position: fixed; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
    <div class="modal-content" style="background-color: white; margin: 10% auto; padding: 20px; border-radius: 5px; width: 50%; position: relative;">
        <!-- Close button (Moved to top-right corner) -->
        <span class="close" onclick="closeModal()" 
              style="cursor: pointer; position: absolute; top: 10px; right: 15px; font-size: 24px;">&times;
        </span>
        <p id="fullDescription" style="margin-top: 30px;">This is a detailed description.</p>
    </div>
</div>
  
    <script>
        function openModal() {
            let description = "This is a detailed description for all items. It contains more information about the exercise.";
            document.getElementById("fullDescription").innerText = description;
            document.getElementById("descriptionModal").style.display = "block";
        }
    
        function closeModal() {
            document.getElementById("descriptionModal").style.display = "none";
        }
    
        // Close modal if user clicks outside of it
        window.onclick = function(event) {
            let modal = document.getElementById("descriptionModal");
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };
    </script>
    

    
     
    <!-- Pagination Controls -->
<div class="pagination">
    <ul class="pagination-list">
        <!-- Previous Button -->
        <% if (currentPage > 1) { %>
            <li><a href="?page=<%= currentPage - 1 %>" class="pagination-btn">❮ Previous</a></li>
        <% } %>

        <!-- Page Numbers with Ellipsis -->
        <% if (totalPages <= 5) { %> 
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li>
                    <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                </li>
            <% } %>
        <% } else { %>  
            <% if (currentPage > 2) { %>
                <li><a href="?page=1">1</a></li>
                <% if (currentPage > 3) { %>  
                    <li class="ellipsis">...</li>  
                <% } %>
            <% } %>

            <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
                <li>
                    <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                </li>
            <% } %>

            <% if (currentPage < totalPages - 1) { %>
                <% if (currentPage < totalPages - 2) { %>  
                    <li class="ellipsis">...</li>  
                <% } %>
                <li><a href="?page=<%= totalPages %>"><%= totalPages %></a></li>
            <% } %>
        <% } %>

        <!-- Next Button -->
        <% if (currentPage < totalPages) { %>
            <li><a href="?page=<%= currentPage + 1 %>" class="pagination-btn">Next ❯</a></li>
        <% } %>
    </ul>
</div>


    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
<%- include('../partials/footer') -%>
</html>